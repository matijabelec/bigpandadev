{% extends 'BigPandaDevMainBundle:Dialogs:modal.html.twig' %}

{% block modal_id 'modal-undelete-confirm' %}

{% block head %}
    <a role="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></a>
    <h4>{% block title 'Confirm undelete'|trans %}</h4>
{% endblock %}

{% block body %}
    <p>{{ 'Are you sure you want to undelete record'|trans }} 
        "<span class="record-name" style="font-weight: bold;"></span>" 
        (<span class="record-id"></span>)?</p>
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Cancel'|trans }}</button>
    <a class="btn btn-danger btn-ok">{% block button_ok_label 'Undelete'|trans %}</a>
{% endblock %}

